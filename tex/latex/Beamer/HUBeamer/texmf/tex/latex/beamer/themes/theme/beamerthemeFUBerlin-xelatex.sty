 	   \begin{beamercolorbox}[wd=.1\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=.3cm,rightskip=.3cm plus1fil]{normal text}%
 	     \usebeamerfont{title in head/foot} \fuberlinpagestring
 	   \end{beamercolorbox}}%
